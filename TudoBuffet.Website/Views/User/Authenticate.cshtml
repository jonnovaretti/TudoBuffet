@model TudoBuffet.Website.Models.UserModel
@{
    ViewData["Title"] = "Authenticate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("entrar", "usuarios", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- breadcrumb-->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Início</a></li>
                        <li aria-current="page" class="breadcrumb-item active">Entrar</li>
                    </ol>
                </nav>
            </div>
            <div class="col-lg-6">
                <div class="box" id="signup">
                    <h1>Login</h1>
                    <p class="lead">Já tem cadastro?</p>
                    <hr>
                    <div class="form-group">
                        <label for="email">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Entrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
