@model TudoBuffet.Website.Models.BuffetAdminViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- breadcrumb-->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li aria-current="page" class="breadcrumb-item active">Meus buffets</li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-3">
            <div class="card sidebar-menu">
                <div class="card-header">
                    <h3 class="h4 card-title">Seção do usuário</h3>
                </div>
                <div class="card-body">
                    <ul class="nav nav-pills flex-column">
                        <a href="~/admin/buffets" class="nav-link"><i class="fa fa-plus"></i> Novo buffet</a>
                        <a href="usuario-buffets.html" class="nav-link active"><i class="fa fa-list"></i> Meus buffets</a>
                        <a href="customer-wishlist.html" class="nav-link"><i class="fa fa-heart"></i> Orçamentos recebidos</a>
                        <a href="customer-account.html" class="nav-link"><i class="fa fa-user"></i> Minha conta</a>
                        <a href="index.html" class="nav-link"><i class="fa fa-sign-out"></i> Sair</a>
                    </ul>
                </div>
            </div>
            <!-- /.col-lg-3-->
            <!-- *** CUSTOMER MENU END ***-->
        </div>
        <div id="customer-orders" class="col-lg-9">
            <div class="box">
                <h1>Buffets</h1>
                <p class="lead">Bem-vindo, @Model.OwnerName</p>
                <p class="text-muted">Se houver algum problema, entre em <a href="contact.html">contato</a>, responderemos o mais breve possível.</p>
                <divw class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Data Ativação</th>
                                <th>Plano</th>
                                <th>Status</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var purchasedPlan in Model.PurchasedBuffetAds)
                            {
                            <tr>
                                <td><span>@purchasedPlan.Id</span></td>
                                <td><span>@purchasedPlan.Name</span></td>
                                <td><span>@purchasedPlan.ActivedAt</span></td>
                                <td><span>@purchasedPlan.NamePlan</span></td>
                                <td><span>@purchasedPlan.Status</span></td>
                                <td><a href="~/admin/buffets/@purchasedPlan.BuffetId.ToString()/fotos" class="btn btn-primary btn-sm">Fotos</a></td>
                                <td><a href="~/admin/buffets/@purchasedPlan.BuffetId.ToString()" class="btn btn-primary btn-sm">Editar</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </divw>
            </div>
        </div>
    </div>
</div>