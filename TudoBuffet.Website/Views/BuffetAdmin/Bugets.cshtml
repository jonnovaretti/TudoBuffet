@model TudoBuffet.Website.Models.ReceivedBudgetViewModel
@{
    ViewData["Title"] = "Bugets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li aria-current="page" class="breadcrumb-item active">Meus buffets</li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-3">
            <div class="card sidebar-menu">
                <div class="card-header">
                    <h3 class="h4 card-title">Seção do usuário</h3>
                </div>
                <div class="card-body">
                    <ul class="nav nav-pills flex-column">
                        <a href="usuario-novo-buffet.html" class="nav-link"><i class="fa fa-plus"></i> Novo buffet</a>
                        <a href="usuario-buffets.html" class="nav-link"><i class="fa fa-list"></i> Meus buffets</a>
                        <a href="customer-wishlist.html" class="nav-link active"><i class="fa fa-heart"></i> Orçamentos recebidos</a>
                        <a href="customer-account.html" class="nav-link"><i class="fa fa-user"></i> Minha conta</a>
                        <a href="index.html" class="nav-link"><i class="fa fa-sign-out"></i> Sair</a>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="box">
                <h1>Pedidos de orçamentos recebidos</h1>
                <p class="lead">Clique em detalhes para responder as perguntas feita pelo o interessado e enviar o orçamento</p>
                <div class="row ">
                    @foreach (var budget in Model.ReceivedBudgets)
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nome do interessado</th>
                                    <th>Quantidade de convidados</th>
                                    <th>Data da festa</th>
                                    <th>Foi respondido</th>
                                    <th>Pedido feito em</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@budget.OwnerPartyName</td>
                                    <td>@budget.QuantityPartyGuests</td>
                                    <td>@budget.PartyDay.ToString("dd/MM/yyyy")</td>
                                    <td>@budget.WasAnswered</td>
                                    <td>@budget.SentAt.ToString("dd/MM/yyyy")</td>
                                    <td>@Html.ActionLink("Detalhes", "budgets", "admin", new { id = budget.BudgetDetailId }, null)</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
