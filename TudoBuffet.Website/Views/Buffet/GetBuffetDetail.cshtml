@model TudoBuffet.Website.Models.DetailViewModel

@{
    ViewData["Title"] = "GetBuffetDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- breadcrumb-->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Início</a></li>
                    <li class="breadcrumb-item"><a href="javascript:window.history.back();">Busca</a></li>
                    <li aria-current="page" class="breadcrumb-item active">Detalhe</li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-3">
            <div class="card sidebar-menu mb-4">
                <div class="card-header">
                    <h3 class="h4 card-title">Informações</h3>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <h5>Tipo de espaço</h5>
                            <p><i class="fa fa-arrow-right"></i> @Model.BuffetDetail.Category</p>
                            <h5>Ambiente</h5>
                            <p><i class="fa fa-arrow-right"></i> @Model.BuffetDetail.EnvironmentType</p>
                            <h5>Faixa de preço</h5>
                            <p><i class="fa fa-arrow-right"></i> @Model.BuffetDetail.RangePrince</p>
                        </div>
                        <button class="btn btn-default btn-sm btn-primary" onclick="javascript:addBuffetToBudgetList('@Model.BuffetDetail.Id')"><i class="fa fa-list"></i> Adicionar na lista</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="row">
                <h3 class="text-center">@Model.BuffetDetail.Name</h3>
            </div>
            <div id="productMain" class="row">
                <div class="col-md-12">
                    <div data-slider-id="1" class="owl-carousel shop-detail-carousel">
                        @foreach (var photo in Model.BuffetDetail.PhotosUrls)
                        {
                            <div class="item" style="margin-right:10px"> <img src="@photo" alt="" class="img-fluid"></div>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div data-slider-id="1" class="owl-thumbs">
                        @foreach (var thumbnail in Model.BuffetDetail.ThumbnailsUrls)
                        {
                            <button class="owl-thumb-item"><img src="@thumbnail" alt="" class="img-fluid"></button>
                        }
                    </div>
                </div>
            </div>
            <div id="details" class="box">
                <p></p>
                <h4>Descrição</h4>
                <p>@Model.BuffetDetail.Description</p>
                
                <div class="social">
                    <h4>Visite as redes sociais do buffet</h4>
                    <p><a href="#" class="external facebook"><i class="fa fa-facebook"></i></a><a href="#" class="external gplus"><i class="fa fa-instagram"></i></a></p>
                </div>
                <h4>Localização</h4>
                <blockquote>
                    <p><em>@Model.BuffetDetail.Location</em></p>
                </blockquote>
                <iframe width="600"
                        height="450"
                        frameborder="0" style="border:0"
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA_FosG-_bD5EsBG2qT8a8Al2tmFxDIeg4&q=@Html.Encode(Model.BuffetDetail.Location)" allowfullscreen></iframe>
            </div>
        </div>
        <!-- /.col-md-9-->
    </div>
</div>

